.search
	width 335px
	margin 12px 0 20px 20px

	&__option
		width 167px
		margin 0

		select
			width 167px
			height 50px
			font-size 18px
			line-height 18px

	&__select
		width 165px
		height 50px
		border $white-border

		p
			font-size 18px
			line-height 52px

		.caret
			margin 26px 0 0 10px
			border-top 5px solid #777
			border-right 5px solid transparent
			border-left 5px solid transparent

	&__select.last
		width 166px
		border-left none