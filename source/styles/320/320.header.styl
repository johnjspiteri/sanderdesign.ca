header
	position relative
	width 100%
	padding 0
	margin 0
	border none
	z-index 99

.header--container
	float left
	width 100%
	padding 0 0 14px 0
	margin 0 0 12px 0
	background $white
	border-bottom $white-border

.header
	position relative
	width 100%
	margin 0 auto

	&__brand
		float left
		width 100%
		padding 0
		margin 0
		background $white

	&__logo
		position relative
		width 280px
		margin 0 auto

	&__outline
		float left
		width 24px
		height 24px
		padding 0
		margin 10px 20px 0 0
		background $green
		border-radius 10px 0 10px 0

	&__white
		float left
		width 8px
		height 8px
		background $white
		margin 8px 0 0 8px

	&__name
		float left
		width 200px
		padding 0
		margin 0

		h1
			float left
			width 100%
			padding 0
			margin 14px 0 10px 0
			font-family 'usual', sans-serif
			font-weight 400
			font-size 17px
			line-height 17px
			color $black
			border none
			text-align left

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-family 'usual', sans-serif
			font-weight 400
			font-size 16px
			line-height 16px
			color $paragraph
			border none

	&__mobile
		float right
		width 28px
		padding 0
		margin 14px 0 0 0
		outline none
		cursor pointer

		.bar
			float right
			width 28px
			height 2px
			padding 0
			margin 0 0 6px 0
			background $black
			cursor pointer
			outline none
			text-align center

		.b
			width 24px

		.c
			width 20px

	nav
		display none