.contact
	float left
	width 280px
	padding 24px 20px 24px 20px
	margin 0 0 30px 0
	border-top $white-border
	border-bottom $white-border
	background $white

	h1
		width 280px
		padding 0
		margin 0 0 14px 0
		font-weight 400
		font-size 19px
		line-height 35px
		text-align left

	span
		float left
		width 250px
		padding 0
		margin 2px 0 20px 10px
		font-style italic
		font-weight 400
		font-size 18px
		line-height 33px
		color $black
		text-align left

	p
		width 270px
		margin 0 0 18px 0
		font-weight 400
		font-size 16px
		line-height 29px
		color $paragraph

	p.desktop
		display: none

	.profile
		display none