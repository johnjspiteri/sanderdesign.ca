.header--container
	height 56px
	padding 0
	margin 0 0 24px 0
	background $white
	border-bottom $white-border

.header
	width 980px
	margin 0 auto

	&__brand
		width 380px
		padding 0
		margin 0
		height 40px
		background none
		border-bottom none

	&__logo
		width 400px
		margin 0

	&__outline
		width 22px
		height 22px
		margin 22px 16px 0 20px

	&__white
		width 8px
		height 8px
		margin 7px 0 0 7px

	&__name
		width 304px

		h1
			width 128px
			margin 27px 0 0 0
			font-size 14px
			line-height 14px

		h2
			width 160px
			margin 27px 0 0 0
			font-size 14px
			line-height 14px

	nav
		height 42px
		padding 0
		margin 13px 20px 0 0
		border-right $white-border

	&__tile
		height 42px
		padding 0 30px
		margin 0
		border none
		border-top $white-border
		border-left $white-border

		h2
			font-size 14px
			line-height 42px

	&__tile.active
		height 43px
		background $background
		border-bottom none