.header--container
	padding 0
	margin 0 0 24px 0
	background none
	border none

.header
	margin 0 auto

	&__brand
		width 100%
		padding 0
		margin 0
		border-bottom $white-border

	&__logo
		width 700px
		margin 0 0 0 30px

	&__outline
		width 24px
		height 24px
		margin 14px 22px 14px 0

	&__white
		width 8px
		height 8px
		margin 8px 0 0 8px

	&__name
		width 630px

		h1
			width 170px
			margin 18px 0 0 0
			font-size 18px
			line-height 18px

		h2
			width 320px
			margin 19px 0 0 0
			font-size 17px
			line-height 17px

	&__mobile
		display none

	nav
		display block
		float left
		padding 0
		margin 0
		border none

	&__tile
		float left
		height 49px
		padding 0 42px
		margin 0
		background $green-light
		border none
		border-right $white-border
		border-bottom $white-border
		border-radius none
		cursor pointer

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 18px
			line-height 51px
			color $paragraph
			border none
			text-align center

	&__tile.active
		background $background
		border-bottom none

		h2
			color $paragraph

	&__tile.end.active
		background $background
		border-bottom none
		border-right none

		h2
			color $paragraph
