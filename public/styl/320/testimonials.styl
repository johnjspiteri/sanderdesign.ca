.testimonials
	float left
	width 100%
	margin 0 0 20px 0
	background $white
	border-top $white-border
	border-bottom $white-border

.testimonial
	float left
	width 320px
	padding 18px 0 38px 0
	margin 0
	border-bottom $white-border

	p
		width 280px
		margin 0 0 12px 20px
		font-weight 400
		font-size 16px
		line-height 29px
		color $paragraph
		text-align left

	p.desktop
		display none

	h6
		margin 24px 0 0 20px
		width 280px
		font-weight 400
		font-size 17px
		line-height 17px
		color $black

.testimonial--image
	float left
	width 278px
	height 138px
	margin 0 0 24px 20px
	background $background
	border $white-border
	cursor pointer

.testimonial.end
	border-bottom none
