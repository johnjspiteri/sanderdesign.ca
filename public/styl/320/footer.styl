footer
	position relative
	width 100%

.footer
	float left
	width 100%
	height 586px
	padding 0
	background $green-light
	border-top $white-border

	&__holder
		position relative
		width 100%
		margin 0 auto

		h1
			float left
			width 280px
			margin 28px 0 14px 0
			font-weight 400
			font-size 17px
			line-height 17px
			color $black
			text-align left
			color $black
			border none

		h2
			float left
			width 100%
			padding 0
			margin 0 0 22px 0
			font-weight 400
			font-size 17px
			line-height 17px
			color $paragraph
			border none

		a
			float left
			padding 0 0 3px 0
			margin 0 0 12px 0
			font-weight 400
			font-size 15px
			line-height 30px
			color $black
			border-bottom 1px solid $green
			text-align left

	&__company
		float left
		width 240px
		padding 0 0 0 30px
		margin 0

	&__cv
		float left
		width 260px
		padding 0
		margin 0 0 34px 30px

		p
			width: 260px
			margin 0
			font-style normal
			font-size 16px
			line-height 33px
			color $paragraph

	&__social
		float left
		width 240px
		padding 0
		margin 0 0 0 30px

		.fa-facebook
		.fa-linkedin
		.fa-houzz
			float left
			width 50px
			height 48px
			margin 0 14px 0 0
			font-size 27px
			line-height 54px
			color #999
			background $background
			border $white-border
			border-radius 4px
			text-align center

		.fa-facebook
			font-size 25px
			line-height 57px
			color #3b589c

		.fa-linkedin
			color #007ab9

		.fa-houzz
			color #8ac541

	&__map
		display none