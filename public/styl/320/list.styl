.listings
	float left
	width 320px
	padding 0
	margin 0

.listing
	float left
	width 300px
	padding 0 0 18px 0
	margin 0 0 18px 10px
	background $white
	border $input-border
	border-radius 2px
	cursor pointer

	h3
		float left
		width 100%
		margin 0 0 14px 22px
		font-weight 400
		font-size 19px
		line-height 19px
		color $black

	p
		float left
		margin 0 5px 0 22px
		font-weight 400
		font-size 16px
		line-height 23px
		color $paragraph

	p.blue
		color #97A018
		margin 0

	.image
		float left
		width 300px
		height 151px
		padding 0
		margin 0 0 18px 0
		background $white
		border-bottom $white-border
		border-radius 2px 2px 0 0
		overflow hidden

		img
			float left
			width 100%
			height 100%