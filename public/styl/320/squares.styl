.squares
	float left
	width 100%
	margin 0 0 20px 0
	border-bottom $white-border

.row
	float left
	width 100%

.square
	float left
	width 100%
	padding 32px 0 34px 0
	background $white
	border-top $white-border

	h3
		float left
		padding 0 0 10px 0
		margin 0 0 14px 20px
		font-weight 400
		font-size 17px
		line-height 17px
		border-bottom 2px solid $green

	p
		width 260px
		margin 0 0 0 20px
		font-weight 400
		font-size 16px
		line-height 30px
		color $paragraph

	.image
		float left
		width 200px
		height 238px
		margin 0 0 38px 20px
		border $white-border

		img
			float left
			width 100%
			height 100%

.square.end
	border-bottom none