.listings
	float left
	width 320px
	padding 0
	margin 0

.listing
	display inline-block
	vertical-align top
	width 300px
	padding 0 0 10px 0
	margin 0 1% 18px 10px
	font-size 16px
	background $white
	border $white-border
	border-radius 4px
	cursor pointer

	h3
		float left
		width 100%
		margin 0 0 14px 22px
		font-weight 400
		font-size 19px
		line-height 19px
		color $black

	p
		float left
		margin 0 5px 0 22px
		font-weight 400
		font-size 16px
		line-height 23px
		color $paragraph

	p.blue
		color #97A018
		margin 0

	&__tags
		float left
		width 280px
		padding 0
		margin 28px 0 0 20px

	&__tag
		float left
		padding 6px 12px 7px 12px
		margin 0 7px 7px 0
		background $black
		border-radius 4px

		h4
			float left
			padding 0
			margin 0
			font-weight 600
			font-size 12px
			line-height 12px
			color $white
			text-shadow $white-shadow

	.image
		float left
		width 300px
		height 151px
		padding 0
		margin 0 0 18px 0
		background $white
		border-bottom $white-border
		border-radius 2px 2px 0 0
		overflow hidden

		img
			float left
			width 100%
			height 100%