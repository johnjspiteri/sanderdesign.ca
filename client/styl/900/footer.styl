.footer
	padding 34px 0 0 0

	&__holder
		width 904px

		h1
			width 280px
			margin 0 0 20px 0
			font-size 22px
			line-height 22px

		p
			margin 7px 0 8px 0
			font-size 21px
			line-height 21px

		a
			padding 0 0 1px 0
			margin 0 0 10px 0
			font-size 20px
			line-height 36px

	&__company
		width 250px
		padding 0 70px 0 0

	&__link
		width 230px
		padding 8px 0 0 0

		a
			padding 0 0 4px 0
			margin 0 0 14px 0
			font-size 22px
			line-height 26px

	&__about
		float left
		width 310px
		padding 0 30px 0 0
		margin 0

	&__cv
		width 310px
		padding 0 0 38px 0
		margin 0

		p
			width 280px
			margin 0
			font-size 20px
			line-height 36px

	&__social
		width 240px
		margin 0

		.fa-facebook
		.fa-linkedin
		.fa-houzz
			width 58px
			height 52px
			margin 0 16px 0 0
			font-size 36px
			line-height 55px

		.fa-facebook
			font-size 34px
			line-height 56px

	&__map
		display: block
		float left
		width 228px
		height 310px
		padding 0
		margin 0
		background: $white
		border $border
		border-bottom none
		border-radius: 4px 4px 0 0