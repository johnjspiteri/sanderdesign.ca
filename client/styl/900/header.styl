.header--container
	height 78px
	padding 0
	margin 0 0 28px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 350px
		padding 0
		margin 0
		background none
		border-bottom none

	&__logo
		width 350px
		margin 0

	&__outline
		width 30px
		height 30px
		margin 9px 20px 0 20px

	&__white
		width 12px
		height 12px
		margin 9px 0 0 9px

	&__name
		width 274px
		// background #ff9

		h1
			width 100%
			margin 13px 0 9px 0
			font-size 22px
			line-height 22px

		h2
			width 100%
			margin 0
			font-size 22px
			line-height 22px

	nav
		float right

	&__tile
		height 78px
		padding 0 26px
		margin 0 0 0 0
		border none
		border-left $dotted
		border-bottom $dotted

		h2
			font-size 22px
			line-height 101px

	&__tile.active
		height 79px
		background $background
		border-bottom none
