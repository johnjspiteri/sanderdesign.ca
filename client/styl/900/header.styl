.header--container
	height 84px
	padding 0
	margin 0 0 28px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 380px
		padding 0
		margin 0
		background none
		border-bottom none

	&__logo
		width 380px
		margin 0

	&__outline
		width 30px
		height 30px
		margin 13px 24px 0 40px

	&__white
		width 12px
		height 12px
		margin 9px 0 0 9px

	&__name
		width 284px

		h1
			width 100%
			margin 18px 0 10px 0
			font-size 21px
			line-height 21px

		h2
			width 100%
			margin 0
			font-size 21px
			line-height 21px

	nav
		float right

	&__tile
		height 50px
		padding 0 24px
		margin 0
		background $tile
		border none
		border-left $dotted
		border-bottom $dotted

		h2
			font-size 18px
			line-height 56px

	&__tile.active
		height 50px
		background $background