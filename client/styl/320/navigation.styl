md-sidenav.md-closed
	display none

md-sidenav
	position fixed
	-webkit-flex-direction column
	-ms-flex-direction column
	flex-direction column
	width 245px
	max-width 245px
	height 100%
	min-height 100%
	bottom 0
	background none
	outline none
	overflow none
	box-sizing border-box
	left 0
	top 0
	z-index 999999
	-webkit-transform translate3d(0%, 0, 0)
	transform translate3d(0%, 0, 0)
	overflow scroll

md-sidenav.md-closed
	-webkit-transform translate3d(-100%, 0, 0);
	transform translate3d(-100%, 0, 0);

md-sidenav.md-closed-remove
	display -webkit-flex;
	display -ms-flexbox;
	display flex;
	transition all 1s cubic-bezier(0.25, 0.8, 0.25, 1);

md-sidenav.md-closed-add.md-closed-add-active, md-sidenav.md-closed-remove.md-closed-remove-active
	transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);

md-sidenav.md-locked-open-add,
md-sidenav.md-locked-open-remove
	position: static;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-transform: translate3d(0, 0, 0);
	transform: translate3d(0, 0, 0);

.navigation
	float left
	width 144px
	max-width 144px
	height 100%
	padding 16px 15px 0 15px
	margin 0
	background $background
	border-right $black-border

	&__tile
		float right
		width 142px
		padding 0
		margin 0 0 10px 0
		background $white
		border $background-border
		border-radius 2px
		text-align center
		cursor pointer
		outline none

		h4
			float left
			width 100%
			padding 15px 0 14px 0
			margin 0
			font-weight 400
			font-size 16px
			line-height 16px
			color $black
			text-align center
			outline none

	&__tile.active
		background $green-light
		border $background-border

	&__close
		float left
		width 34px
		height 70px
		padding 0 4px 0 0
		margin 0 0 0 -1px
		background $background
		border $black-border
		border-top none
		border-left none
		cursor pointer
		outline none

		.fa-angle-left
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 25px
			line-height 78px
			color $black
			text-align center
			cursor pointer