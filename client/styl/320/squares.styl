.squares
	float left
	width 100%
	margin 0 0 20px 0
	border-bottom $white-border

.row
	float left
	width 100%

.square
	float left
	width 100%
	padding 28px 0 34px 0
	background $white
	border-top $white-border

	h3
		float left
		padding 0 0 12px 0
		margin 0 0 14px 30px
		font-weight 500
		font-size 18px
		line-height 18px
		border-bottom 1px solid #999

	p
		width 260px
		margin 0 20px 0 30px
		font-weight 300
		font-size 17px
		line-height 30px
		color $paragraph

	.image
		float left
		width 200px
		height 238px
		margin 0 0 38px 20px
		border $white-border

		img
			float left
			width 100%
			height 100%

.square.end
	border-bottom none