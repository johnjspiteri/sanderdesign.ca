.squares
	float left
	width 100%
	background $white
	border-top $white-border

.row
	float left
	width 100%

.square
	float left
	width 100%
	padding 32px 0 34px 0
	border-bottom $dotted

	h3
		float left
		font-weight 500
		font-size 22px
		line-height 22px
		padding 0 0 10px 0
		margin 0 0 14px 20px
		border-bottom $border

	p
		width 260px
		margin 0 20px 0 20px
		font-weight 500
		font-size 22px
		line-height 33px
		color $paragraph

	.image
		float left
		width 200px
		height 238px
		margin 0 0 38px 20px
		border $white-border

		img
			float left
			width 100%
			height 100%

.square.end
	border-bottom none