.square
	float left
	width 100%
	padding 32px 0 34px 0
	border-bottom $dotted

	h1
		width 260px
		font-size 23px
		line-height 35px
		padding 0
		margin 0 0 24px 20px
		text-align left

		i
			color $grey

	h3
		float left
		font-weight 400
		font-size 20px
		line-height 20px
		padding 0 0 10px 0
		margin 0 0 14px 20px
		border-bottom $border

	h6
		float left
		width 270px
		padding 0
		margin 0 0 24px 20px
		font-size 19px
		line-height 28px
		color $black

	p
		width 260px
		margin 0 20px 0 20px
		font-weight 500
		font-size 19px
		line-height 31px
		color $paragraph

	// p.full
	// 	width 260px
	// 	margin 0 0 16px 20px
	// 	font-size 16px
	// 	line-height 25px
	//
	// p.large
	// 	display none

	.image
		float left
		width 200px
		height 238px
		margin 0 0 38px 20px
		border $white-border

		img
			float left
			width 100%
			height 100%

	.profile
		display none

	#map
		float: left
		width: 278px
		height: 220px
		margin: 20px 0 0 20px
		border $border-light
		box-shadow none
		-webkit-box-shadow none
		-moz-box-shadow none

.square.end
	border-bottom none