.squares
	float left
	width 100%
	margin 0 0 20px 0
	background $white
	border-top $white-border

.row
	float left
	width 100%

.square
	float left
	width 100%
	padding 30px 0 30px 0
	border-bottom $dotted

	h3
		float left
		padding 0 0 10px 0
		margin 0 0 14px 20px
		font-weight 500
		font-size 20px
		line-height 20px
		border-bottom 2px solid #999

	p
		width 260px
		margin 0 20px 0 20px
		font-weight 400
		font-size 19px
		line-height 33px
		color $paragraph

	.image
		float left
		width 200px
		height 238px
		margin 0 0 38px 20px
		border $white-border

		img
			float left
			width 100%
			height 100%

.square.end
	border-bottom none