footer
    position:relative
    width 100%

    .footer
        float: left
        width 100%
        padding: 28px 0 20px 0
        border-top 1px solid #e6e6e6
        background $accent

        .holder
            position: relative
            width 100%
            margin 0 auto

            h3
                float: left
                width: 280px
                margin: 0 0 10px 0
                font-size: 14px
                line-height: 14px
                color: $black
                text-align: left

                span
                    margin 0 0 0 8px
                    font-style italic
                    color $grey

            h3.title
                margin 0 0 18px 0

            a
                float: left
                margin 0 0 4px 0
                font-size 14px
                line-height 21px
                color $grey
                text-align left

            p
                float: left
                width: 240px
                font-size: 14px
                line-height: 21px
                color: $grey

            .company
                float: left
                width: 230px
                padding: 0 0 32px 20px

                .link
                    float: left
                    width: 230px
                    padding: 2px 0 0 0

            .cv
                float: left
                width: 210px
                padding: 0 20px 28px 20px

            .social
                float:left
                width: 240px
                padding: 0
                margin: 0 0 0 20px

                .fa-facebook
                .fa-linkedin
                .fa-houzz
                    float: left
                    width: 25px
                    height: 25px
                    margin: 0 12px 0 0
                    font-size 25px
                    line-height 25px
                    color #999

                .fa-facebook
                    color #3b589c
                .fa-linkedin
                    color #007ab9
                .fa-houzz
                    color #8ac541
