footer
	position:relative
	width 100%

.footer
	float: left
	width 100%
	padding: 28px 0 28px 0
	border-top $white-border
	background $accent

	&__holder
		position: relative
		width 100%
		margin 0 auto

		h1
			float left
			width 280px
			margin 0 0 14px 0
			font-weight 600
			font-size 20px
			line-height 20px
			color $black
			text-align left
			color $black
			border none

		h2
			float left
			width 100%
			padding 0
			margin 0 0 28px 0
			font-style italic
			font-weight 400
			font-size 17px
			line-height 17px
			color $paragraph
			border none

		a
			float left
			margin 0 0 4px 0
			font-size 16px
			line-height 28px
			color $paragraph
			text-align left

		p
			float: left
			width: 240px
			font-size: 16px
			line-height: 28px
			color: $paragraph

	&__company
		float left
		width 230px
		padding 0 0 42px 30px

	&__link
		float left
		width 230px
		padding 0
		margin 2px 0 0 0

	&__cv
		float left
		width 210px
		padding 0 20px 38px 30px

	&__social
		float left
		width 240px
		padding 0
		margin 0 0 0 30px

		.fa-facebook
		.fa-linkedin
		.fa-houzz
			float: left
			width: 48px
			height: 48px
			margin: 0 12px 0 0
			font-size 31px
			line-height 50px
			color #999
			background: $white
			border $dotted
			border-radius: 4px
			text-align center

		.fa-facebook
			font-size 29px
			color #3b589c

		.fa-linkedin
			color #007ab9

		.fa-houzz
			color #8ac541
