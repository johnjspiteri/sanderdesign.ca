header
	position relative
	width 100%
	padding 0
	margin 0
	border none
	z-index 9999

.header--container
	float left
	width 100%
	padding 0 0 14px 0
	margin 0 0 18px 0
	background $white
	border-bottom $white-border

.header
	position relative
	width 100%
	margin 0 auto

	&__brand
		float left
		width 100%
		padding 0
		margin 0
		background $white

	&__logo
		position relative
		width 300px
		margin 0 auto

	&__outline
		float left
		width 24px
		height 24px
		padding 0
		margin 12px 18px 0 5px
		background $green
		border-radius 10px 0 10px 0

	&__white
		float left
		width 8px
		height 8px
		background $white
		margin 8px 0 0 8px

	&__name
		float left
		width 210px
		padding 0
		margin 0

		h1
			float left
			width 100%
			padding 0
			margin 14px 0 10px 0
			font-weight 500
			font-size 18px
			line-height 18px
			color $black
			border none
			text-align left

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 18px
			line-height 18px
			color $paragraph
			border none

	&__mobile
		float right
		padding 0
		margin 12px 5px 0 0

		.fa-bars
			float left
			padding 0
			margin 0
			font-weight normal
			font-size 23px
			line-height 23px
			color $black
			cursor pointer
			outline none
			text-align center

	nav
		display none