header
	position relative
	width 100%
	padding 0
	margin 0
	border none

.header--container
	float left
	width 100%
	padding 0 0 12px 0
	margin 0 0 12px 0
	background $white
	border-bottom $white-border

.header
	position relative
	width 100%
	margin 0 auto

	&__brand
		float left
		width 100%
		padding 0
		margin 0
		background $white

	&__logo
		position relative
		width 300px
		margin 0 auto

	&__outline
		float left
		width 26px
		height 26px
		padding 0
		margin 16px 18px 0 10px
		background $green
		border-radius 10px 0 10px 0

	&__white
		float left
		width 10px
		height 10px
		background $white
		margin 8px 0 0 8px

	&__name
		float left
		width 242px
		padding 0
		margin 0

		h1
			float left
			width 100%
			padding 0
			margin 20px 0 15px 0
			font-weight 500
			font-size 23px
			line-height 23px
			color $black
			border none
			text-align left

		h2
			float left
			width 100%
			padding 0
			margin 0 0 24px 0
			font-weight 400
			font-size 21px
			line-height 21px
			color $paragraph
			border none

	&__mobile
		float right
		padding 7px 12px 5px 12px
		margin 0 12px 0 0
		background $grey-gradient
		border $grey-gradient-border
		border-radius 2px
		cursor pointer
		outline none

		h3
			float left
			width 100%
			font-weight 600
			font-size 15px
			line-height 15px
			color $white
			text-align center
			text-shadow $dark-shadow

	nav
		display none