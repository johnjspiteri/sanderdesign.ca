.header-tag
	display none

header
	position: relative
	width: 100%
	padding: 0
	margin: 0
	border none

.header
	float left
	width 100%
	padding 0
	margin 0 0 20px 0
	background $white
	border-bottom $border-light

	&__brand
		float left
		width 100%
		height 64px
		padding 0
		margin 0
		background $white

	&__logo
		position relative
		width 280px
		margin 0 auto

	&__name
		float left
		width 194px
		padding 0
		margin 0

		h1
			float left
			width 100%
			padding 0
			margin 11px 0 6px 0
			font-size 20px
			line-height 20px
			text-align left
			color $black
			border none

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-style italic
			font-size 16px
			line-height 16px
			color $paragraph
			border none

	&__outline
		float left
		width 28px
		height 28px
		padding 0
		margin 12px 18px 12px 0
		background #c3d021
		border-radius 10px 0 10px 0

	&__white
		float left
		width 10px
		height 10px
		background $white
		margin 9px 0 0 9px

	&__mobile
		float left
		width 36px
		height 32px
		padding 0
		margin 10px 0 0 0
		background $grey-gradient
		border $grey-gradient-border
		border-bottom $grey-gradient-border-bottom
		border-radius 4px

		.fa-bars
			float left
			width 100%
			font-weight normal
			font-size 23px
			line-height 34px
			color $white
			text-align center
			text-shadow: $dark-shadow

	nav
		display: none