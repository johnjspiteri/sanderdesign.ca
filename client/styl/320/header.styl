header
	position: relative
	width: 100%
	padding: 0
	margin: 0
	border none

.header--container
	float left
	width 100%
	padding 0 0 14px 0
	margin 0 0 14px 0
	background $white
	border-bottom $white-border

.header
	position: relative
	width 100%
	margin 0 auto

	&__brand
		float left
		width 100%
		padding 0
		margin 0
		background $white

	&__logo
		position relative
		width 280px
		margin 0 auto

	&__outline
		float left
		width 28px
		height 28px
		padding 0
		margin 11px 16px 0 0
		background $green
		border-radius 10px 0 10px 0

	&__white
		float left
		width 10px
		height 10px
		background $white
		margin 9px 0 0 9px

	&__name
		float left
		width 196px
		padding 0
		margin 0

		h1
			float left
			width 100%
			padding 0
			margin 13px 0 8px 0
			font-weight 600
			font-size 21px
			line-height 21px
			text-align left
			color $black
			border none

		p
			float left
			width 100%
			padding 0
			margin 0
			font-style italic
			font-weight 400
			font-size 19px
			line-height 19px
			color $paragraph
			border none

	&__mobile
		float left
		width 36px
		height 28px
		padding 6px 0 2px 0
		margin 0
		background $grey-gradient
		border $grey-gradient-border
		border-top none
		border-radius 0 0 4px 4px
		cursor: pointer

		.fa-bars
			float left
			width 100%
			font-weight normal
			font-size 22px
			line-height 29px
			color $white
			text-align center
			text-shadow: $dark-shadow

	nav
		display: none