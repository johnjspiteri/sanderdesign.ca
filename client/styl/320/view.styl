.view
	float left
	width 320px
	padding 0 0 16px 0
	margin 0 0 30px 0
	background $white
	border-top $input-border
	border-bottom $input-border
	border-radius none
	cursor pointer

	.fa-long-arrow-left
		float left
		width 100%
		padding 8px 0 6px 0
		margin 0
		font-size 31px
		line-height 31px
		color $black
		background $green-light
		border-bottom $input-border
		border-radius none
		text-align center
		text-decoration none

	.row
		float left
		width 100%

	h3
		float left
		width 280px
		margin 28px 0 14px 20px
		font-weight 400
		font-size 23px
		line-height 23px
		color $black

	h4
		float left
		margin 0 5px 22px 20px
		font-weight 500
		font-size 18px
		line-height 24px
		color $paragraph

	h4.blue
		color #97A018
		margin 0

	p
		float left
		width 280px
		margin 0 0 0 20px
		font-weight 500
		font-size 17px
		line-height 32px
		color $paragraph