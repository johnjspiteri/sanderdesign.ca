.search--holder
	float left
	width 100%
	height 46px
	margin 20px 0 0 0

.search
	position relative
	width 320px
	height 45px
	padding 0
	margin 0 auto

	&__option
		float left
		width 155px
		padding 0
		margin 0

		select
			float left
			width 155px
			height 42px
			padding 0
			margin 0
			font-weight 400
			font-size 20px
			line-height 20px
			color $black
			background $grey-gradient
			border none
			// border-radius 2px
			outline none
			text-align center
			cursor pointer
			-webkit-appearance none
			vertical-align middle
			-moz-appearance none
			appearance none
			z-index 100

		.select-mask
			position absolute
			width 154px
			height 42px
			padding 0
			margin 0
			color $paragraph
			background $green-light
			border none
			border-top $dotted
			border-right $dotted
			border-radius 0 2px 0 0
			vertical-align middle
			z-index 99
			pointer-events: none

			p
				float left
				width 100%
				padding 0
				margin 0
				font-weight 500
				font-size 20px
				line-height 44px
				color $grey
				text-align center
				z-index 999

			.player_caret
				float left
				margin 16px 0px 2px 10px
				border-top 5px solid #999;
				border-right 5px solid transparent;
				border-left 5px solid transparent;
				border-bottom 0 dotted;