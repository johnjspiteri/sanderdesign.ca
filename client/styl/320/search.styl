.search
	float left
	width 298px
	padding 18px 0 12px 20px
	margin 10px 0 18px 0
	background $green-light
	border-top $green-light-border
	border-bottom $green-light-border

	h6
		float left
		width 100%
		margin 0 0 14px 0
		font-weight 600
		font-size 17px
		line-height 17px
		color $paragraph
		text-align center
		text-shadow $shadow

	&__option
		float left
		width 134px
		padding 0
		margin 0 10px 0 0

		select
			float left
			width 132px
			height 46px
			padding 0
			margin 0
			font-weight 400
			font-size 20px
			line-height 20px
			color $black
			background $white
			border $white-border
			border-radius 4px
			outline none
			text-align center
			cursor pointer
			-webkit-appearance none
			vertical-align middle
			-moz-appearance none
			appearance none
			z-index 100

		.select-mask
			position absolute
			width 132px
			height 46px
			margin 29px 0 0 0
			background $white
			border $white-border
			border-radius 4px
			vertical-align middle
			z-index 99
			pointer-events: none

			h4
				float left
				width 100%
				padding 0
				margin 0
				font-weight 400
				font-size 20px
				line-height 46px
				color $black
				text-align center
				z-index 999

	&__input
	&__reset
		display: none