.search--holder
	float left
	width 100%
	height 49px
	margin 12px 0 0 0

.search
	position relative
	width 320px
	height 48px
	padding 0
	margin 0 auto

	&__option
		float left
		width 160px
		padding 0
		margin 0

		select
			float left
			width 159px
			height 48px
			padding 0
			margin 0
			font-weight 400
			font-size 18px
			line-height 18px
			color $black
			background $grey-gradient
			border none
			// border-radius 2px
			outline none
			text-align center
			cursor pointer
			-webkit-appearance none
			vertical-align middle
			-moz-appearance none
			appearance none
			z-index 100

		.select-mask
			position absolute
			width 159px
			height 48px
			padding 0
			margin 0
			color $paragraph
			background $green-light
			border none
			border-top $white-border
			border-right $white-border
			border-radius 0 2px 0 0
			vertical-align middle
			z-index 99
			pointer-events none

			p
				float left
				width 100%
				padding 0
				margin 0
				font-weight 500
				font-size 17px
				line-height 50px
				color $grey
				text-align center

			.caret
				position absolute
				padding 0
				margin 24px 0 0 10px
				border-top 5px solid #777
				border-right 5px solid transparent
				border-left 5px solid transparent
				border-bottom 0 dotted