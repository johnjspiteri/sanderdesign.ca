.search
	float left
	width 290px
	padding 0
	margin 20px 0 22px 20px

	&__option
		float left
		width 135px
		padding 0
		margin 0 10px 0 0

		select
			float left
			width 135px
			height 42px
			padding 0
			margin 0
			font-weight 400
			font-size 19px
			line-height 19px
			color $white
			background $grey-gradient
			border $grey-gradient-border
			border-radius 2px
			outline none
			text-align center
			cursor pointer
			-webkit-appearance none
			vertical-align middle
			-moz-appearance none
			appearance none
			z-index 100

		.select-mask
			position absolute
			width 133px
			height 42px
			padding 0
			margin 0
			color $paragraph
			background $green-light
			border $green-light-border
			border-radius 2px
			vertical-align middle
			z-index 99
			pointer-events: none

			p
				float left
				width 100%
				padding 0
				margin 0
				font-weight 400
				font-size 19px
				line-height 43px
				color $grey
				text-align center
				z-index 999

	&__input
	&__reset
		display: none