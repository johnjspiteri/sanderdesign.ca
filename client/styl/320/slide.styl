.product-images
	float left
	width 320px
	padding: 0
	margin 0
	border none
	outline none

	slick
		visibility hidden

	slick.slick-initialized
		visibility visible

	.slick-slider
		position relative
		width 320px
		padding: 0
		margin: 0
		box-sizing: border-box
		-moz-box-sizing: border-box
		-webkit-touch-callout: none
		-webkit-user-select: none
		-khtml-user-select: none
		-moz-user-select: none
		-ms-user-select: none
		user-select: none
		-ms-touch-action: none
		-webkit-tap-highlight-color: transparent
		background none
		border none
		overflow hidden

		img
			float left
			width 320px
			height 160px
			// border-top $grey-gradient-border
			// border-bottom $grey-gradient-border-bottom

		ul.slick-dots
			display: block
			position relative
			width: 312px
			padding 10px 0 2px 8px
			margin 0
			list-style: none
			text-align: center

			li
				display block
				float: left
				width: 68px
				height: 34px
				padding: 0
				margin: 0 10px 14px 0
				border none
				opacity .6
				background $white
				overflow hidden

				img
					float: left
					width: 66px
					height: 32px
					margin: 0
					border $grey-gradient-border

			span
				display none
				margin 10000px


			li.slick-active
				opacity 1

				img
					border $grey-gradient-border

	.slick-slider.index
		float left
		width 320px
		padding 0
		margin 0
		background none
		box-sizing border-box
		-moz-box-sizing border-box
		-webkit-touch-callout none
		-webkit-user-select none
		-khtml-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		-ms-touch-action none
		-webkit-tap-highlight-color transparent
		margin 0 0 0 0

		ul.slick-dots
			float left
			width 206px
			padding 10px 0 12px 107px
			margin 0
			list-style none
			text-align center

			li
				position relative
				width 26px
				height 26px
				padding 0
				margin 0
				border none
				outline none
				opacity 1
				z-index 999
				background: none

				span
					display block
					float left
					width 26px
					height 26px
					padding 0
					margin 0
					font-size 57px
					line-height 14px
					color $grey-gradient
					background none
					border none
					outline none
					text-align center
					text-shadow none

				img
					display none

			li.slick-active span
				color $grey-gradient

	.slick-initialized
		display block

	.slick-list
		position: relative
		overflow: hidden
		display: block
		margin: 0
		padding: 0

	.slick-list:focus
		outline: none

	.slick-loading .slick-list
		background: white url("../img/ajax-loader.gif") center center no-repeat

	.slick-list.dragging
		cursor: pointer
		cursor: hand

	.slick-slider .slick-list, .slick-track, .slick-slide, .slick-slide img
		-webkit-transform: translate3d(0, 0, 0)
		-moz-transform: translate3d(0, 0, 0)
		-ms-transform: translate3d(0, 0, 0)
		-o-transform: translate3d(0, 0, 0)
		transform: translate3d(0, 0, 0)

	.slick-track
		position: relative
		left: 0
		top: 0
		display: block
		zoom: 1

	.slick-track:before, .slick-track:after
		content: ""
		display: table

	.slick-track:after
		clear: both

	.slick-loading .slick-track
		visibility: hidden

	.slick-slide
		float: left
		height: 100%
		min-height: 1px
		display: none

	.slick-slide img
		display: block

	.slick-slide.slick-loading img
		display: none

	.slick-slide video
		display: block

	.slick-slide video.slick-loading
		display: none

	.slick-slide.dragging img
		pointer-events: none

	.slick-initialized .slick-slide
		display: block

	.slick-loading .slick-slide
		visibility: hidden

	.slick-vertical .slick-slide
		display: block
		height: auto