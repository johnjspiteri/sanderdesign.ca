.listings
	float left
	width 300px
	margin 0 0 0 10px

	.listing
		float left
		width 300px
		padding 0 0 16px 0
		margin 0 0 14px 0
		background $white
		border $input-border
		border-radius none
		cursor pointer

		h3
			float left
			width 100%
			margin 10px 0 12px 28px
			font-weight 400
			font-size 22px
			line-height 22px
			color $black

		h4
			float left
			padding 5px 10px 6px 20px
			margin 0 0 14px 10px
			font-weight 500
			font-size 15px
			line-height 15px
			color $white
			background $grey-gradient
			border-radius 4px

		p
			float left
			margin 0 5px 0 28px
			font-weight 500
			font-size 17px
			line-height 24px
			color $paragraph

		p.blue
			color #97A018
			margin 0

		.fa-long-arrow-left
			float left
			height 20px
			padding 0px 14px
			margin 10px 0 0 20px
			font-size 15px
			line-height 20px
			color $white
			background #333
			border-radius 4px
			text-align center
			text-decoration none

		.image
			float left
			width 300px
			height 188px
			padding 0
			margin 0 0 12px 0
			background $white
			border-bottom $white-border
			border-radius 4px 4px 0 0
			overflow hidden

			img
				float left
				width 100%
				height 100%

		.media
			float left
			width 200px
			height 238px
			padding 0
			margin 20px 0 0 10px
			background $white
			border $white-border
			border-radius 4px
			overflow hidden

			img
				float left
				width 100%
				height 100%