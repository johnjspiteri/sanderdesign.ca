.listings
	float left
	width 300px
	margin 0 0 0 10px

	.listing
		float left
		width 300px
		padding 0 0 16px 0
		margin 0 0 14px 0
		background $white
		border $input-border
		border-radius 2px 2px 2px 2px
		cursor pointer

		h3
			float left
			width 100%
			margin 10px 0 10px 24px
			font-weight 400
			font-size 21px
			line-height 21px
			color $black

		p
			float left
			margin 0 5px 0 24px
			font-weight 500
			font-size 17px
			line-height 24px
			color $paragraph

		p.blue
			color #97A018
			margin 0
