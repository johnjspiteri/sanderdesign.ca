.write
    float: left
    width: 100%
    background $white

    .square
        float: left
        width: 100%
        padding: 28px 0 28px 0
        border-bottom: $dotted

        h1
            width 260px
            font-size 23px
            line-height: 35px
            padding: 0
            margin: 0 0 24px 20px
            text-align left

            i
                color $grey

        h3
            float: left
            font-size 16px
            line-height: 16px
            padding: 0 0 8px 0
            margin: 0 70px 10px 20px
            border-bottom $dotted

        h6
            float: left
            width 270px
            padding: 0
            margin: 0 0 24px 20px
            font-size 19px
            line-height: 28px
            color $black

        p
            width: 230px
            margin: 0 30px 0 20px
            font-size: 15px
            line-height: 23px
            color: $grey

        p.full
            width 260px
            margin 0 0 16px 20px
            font-size: 16px
            line-height: 25px

        p.large
            display none

        .service
            float left
            width: 200px
            height: 238px
            margin: 0 60px 28px 20px
            border $border
            box-shadow: 1px 1px 3px 1px #999
            -webkit-box-shadow: 1px 1px 3px 1px #999
            -moz-box-shadow: 1px 1px 3px 1px #999;

            img
                float left
                width 100%
                height 100%

        .profile
            display none

        #map
            float: left
            width: 278px
            height: 220px
            margin: 20px 0 0 20px
            border $border-light
            box-shadow none
            -webkit-box-shadow none
            -moz-box-shadow none

    .square.end
        border-bottom none

.testimonials
    float left
    width 100%
    background #fff

    .testimonial
        float: left
        width: 100%
        padding: 30px 0 20px 0
        margin 0
        border-bottom $dotted

        p
            width: 280px
            margin 8px 0 20px 20px
            font-size: 15px
            line-height: 25px
            color: $grey

        h6
            margin 0 0 0 20px
            width: 280px
            font-size: 15px
            line-height: 15px
            color: #666

    .testimonial-image
        float: left
        width: 100px
        height: 120px
        margin: 0 18px 0 20px
        background: #ccc
        border $border

    .testimonial.end
        border-bottom none
