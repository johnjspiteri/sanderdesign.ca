.medias
	float left
	width 300px
	margin 10px 0 10px 10px

	.media
		float left
		width 268px
		padding 28px 15px 24px 15px
		margin 0 0 16px 0
		background $white
		border $white-border
		border-radius 4px
		cursor pointer

		h3
			float left
			width 100%
			margin 0 0 22px 10px
			font-weight 500
			font-size 21px
			line-height 27px
			color $black
			text-shadow $shadow

		h4
			float left
			padding 8px 14px 8px 14px
			margin 0 0 18px 10px
			font-weight 600
			font-size 12px
			line-height 12px
			color $white
			background $grey-gradient
			border-radius 4px
			text-shadow $dark-shadow

		p
			float left
			width 248px
			margin 0 5px 0 10px
			font-weight 400
			font-size 17px
			line-height 30px
			color $paragraph
			text-shadow $shadow

		p.blue
			color $paragraph
			margin 0

		.image
			float left
			width 200px
			height 238px
			padding 0
			margin 28px 0 0 10px
			background $white
			border $white-border
			border-radius 4px
			overflow hidden

			img
				float left
				width 100%
				height 100%