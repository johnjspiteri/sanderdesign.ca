.medias
	float left
	width 300px
	margin 0 0 10px 10px

	.media
		float left
		width 268px
		padding 24px 15px 20px 15px
		margin 0 0 14px 0
		background $accent
		border $input-border
		border-radius 4px
		cursor pointer

		h3
			float left
			width 100%
			margin 0 0 18px 10px
			font-weight 500
			font-size 27px
			line-height 32px
			color $black
			text-shadow $shadow

		h4
			float left
			padding 7px 12px 8px 12px
			margin 0 0 18px 10px
			font-weight 500
			font-size 16px
			line-height 16px
			color $white
			background $grey-gradient
			border-radius 4px

		p
			float left
			width 238px
			margin 0 5px 0 10px
			font-weight 500
			font-size 21px
			line-height 30px
			color $paragraph

		p.blue
			color $paragraph
			margin 0

		.image
			float left
			width 200px
			height 238px
			padding 0
			margin 24px 0 0 10px
			background $white
			border $white-border
			border-radius 4px
			overflow hidden

			img
				float left
				width 100%
				height 100%