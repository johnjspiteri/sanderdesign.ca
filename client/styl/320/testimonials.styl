.testimonials
	float left
	width 100%
	margin 0 0 20px 0
	background $white
	border-top $white-border
	border-bottom $white-border

.testimonial
	float left
	width 320px
	padding 32px 0 48px 0
	margin 0
	border-bottom $dotted

	p
		width 280px
		margin 0 0 12px 20px
		font-weight 400
		font-size 17px
		line-height 30px
		color $paragraph
		text-align left
		text-shadow $shadow

	p.desktop
		display none

	h6
		margin 24px 0 0 20px
		width 280px
		font-weight 500
		font-size 17px
		line-height 17px
		color $grey

.testimonial--image
	float left
	width 80px
	height 120px
	margin 0 20px 6px 20px
	background $background
	border $white-border

.testimonial.end
	border-bottom none
