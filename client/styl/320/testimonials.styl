.testimonials
	float left
	width 100%
	background #fff

	.testimonial
		float: left
		width: 100%
		padding: 30px 0 20px 0
		margin 0
		border-bottom $dotted

		p
			width: 280px
			margin 8px 0 20px 20px
			font-size: 15px
			line-height: 25px
			color: $grey

		h6
			margin 0 0 0 20px
			width: 280px
			font-size: 15px
			line-height: 15px
			color: #666

	.testimonial-image
		float: left
		width: 100px
		height: 120px
		margin: 0 18px 0 20px
		background: #ccc
		border $border

	.testimonial.end
		border-bottom none
