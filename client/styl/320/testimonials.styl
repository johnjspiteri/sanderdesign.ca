.testimonials
	float left
	width 100%
	margin 0 0 20px 0
	background $white
	border $white-border
	border-bottom $white-border

.testimonial
	float left
	width 100%
	padding 32px 0 42px 0
	margin 0
	border-bottom $dotted

	p
		width 280px
		margin 0 0 12px 20px
		font-weight 400
		font-size 18px
		line-height 30px
		color $paragraph
		text-align left
		text-shadow $shadow

	h6
		margin 14px 0 0 20px
		width 280px
		font-weight 500
		font-size 18px
		line-height 18px
		color $grey

.testimonial--image
	float left
	width 80px
	height 120px
	margin 0 20px 8px 20px
	background $background
	border $white-border

.testimonial.end
	border-bottom none
