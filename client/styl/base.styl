*
	margin: 0
	padding: 0

html
body
	// position: relative
	height 100%
	min-height 100%
	font-size 100%
	margin 0
	padding 0
	z-index: 1
	font-family "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif
	background: $background

body.locked
	// height 100%
	// margin 0
	// padding 0
	overflow hidden

.wf-loading
	font-family "proxima-nova"
	visibility hidden

.wf-active
	visibility visible

img, object, embed
	max-width 100%
	height auto

object, embed
	height 100%

ul
	list-style none

.hide
	display none

.antialiased
	-webkit-font-smoothing antialiased

img
	display inline-block
	vertical-align middle
	-ms-interpolation-mode bicubic

a
	color #2ba6cb
	text-decoration none
	line-height inherit
	cursor: pointer

a:hover, a:focus, a.active
	cursor pointer
	outline: 0
	-moz-outline: none

a img
	border none

em, i
	font-style italic
	line-height inherit

strong, b
	font-weight bold
	line-height inherit
	color #000

small
	font-size 60%
	line-height inherit

#panel
	position: fixed
	width: 100%
	height: 100%
	top: 0
	left: 0
	background: $black
	opacity: 0.8
	filter: unquote('alpha(opacity=80)')
	z-index: 99999

#map_canvas
	position relative
	height: 100%
	width: 100%
	margin: 0px

.angular-google-map-container
	position absolute
	top 0
	bottom 0
	right 0
	left 0