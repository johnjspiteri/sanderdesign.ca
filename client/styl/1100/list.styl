.listings--holder
	padding 30px 0 20px 0

.listings
	width 1034px
	padding 0
	margin 0 auto 30px auto

	.listing
		width 232px
		padding 0 0 12px 0
		margin 0 5px 16px 5px
		background $white

		h3
			font-size 16px
			line-height 23px
			margin 0 0 4px 22px
			color $black

		p
			margin 0 5px 0 22px
			font-style italic
			font-size 14px
			line-height 22px

		p.blue
			margin 0

		.image
			width 232px
			height 117px
			margin 0 0 11px 0
			border none
			border-bottom $input-border
			border-radius 0

	.listing.end
		border-bottom none

	.listing.full
		width 100%

		h3
			width 400px
			margin 0 0 0 10px
			font-size: 25px
			line-height:25px

		h4
			width 400px
			margin 18px 0 26px 10px
			font-size: 17px
			line-height 17px

		p
			width 600px
			margin 0 120px 0 10px
			font-size: 16px
			line-height: 25px
