.listings
	width 1048px
	margin 0 0 18px 0

	.listing
		width 247px
		padding 0 0 10px 0
		margin 0 12px 10px 0
		background none
		border none

		h3
			font-size 17px
			line-height 24px
			margin 0 0 5px 14px
			color $paragraph

		h4
			width 280px
			margin 14px 0 22px 0
			font-size: 15px
			line-height 15px

		p
			margin 0 5px 0 10px
			font-size 19px
			line-height 25px

		p.blue
			margin 0

		.image
			width 247px
			height 140px
			margin 0 0 6px 0
			border none
			border-bottom $input-border
			border-radius 0 0 0 0

	.listing.end
		border-bottom none

	.listing.full
		width 100%

		h3
			width 400px
			margin 0 0 0 10px
			font-size: 25px
			line-height:25px

		h4
			width 400px
			margin 18px 0 26px 10px
			font-size: 17px
			line-height 17px

		p
			width 600px
			margin 0 120px 0 10px
			font-size: 16px
			line-height: 25px
