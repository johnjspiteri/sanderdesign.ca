.squares
	width 1022px
	margin 0
	border $white-border
	border-bottom none

.square
	width 225px
	padding 28px 10px 30px 20px

	h3
		font-size 16px
		line-height 16px
		padding 0 0 9px 0
		margin 0 0 11px 0

	p
		width 214px
		font-size 16px
		line-height 28px
		margin 0

	p.full
		width 940px
		margin 0 0 14px 0
		font-size 16px
		line-height 26px

	p.large
		display block
		width 940px
		margin 0 0 14px 0
		font-size 16px
		line-height 26px

	.image
		width 172px
		height 205px
		margin 0 37px 38px 0

.square.last
	width 194px

.square.plug
	border-right 1px dotted #ccc