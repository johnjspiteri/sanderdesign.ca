.header--container
	height 42px
	padding 0
	margin 0 0 22px 0
	background $grey
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 460px
		padding 0
		margin 0
		background none
		border-bottom none

	&__logo
		width 460px
		margin 0 0 0 0

	&__outline
		width 24px
		height 24px
		margin 10px 22px 0 0

	&__white
		width 8px
		height 8px
		margin 8px 0 0 8px

	&__name
		width 404px

		h1
			width 162px
			margin 13px 0 0 0
			font-size 18px
			line-height 18px

		p
			width 230px
			margin 13px 0 0 0
			font-weight 400
			font-size 20px
			line-height 20px

	nav
		border-right $dotted

	&__tile
		height 42px
		padding 0 22px
		border none
		border-left $dotted
		// border-bottom $white-border

		h2
			font-size 16px
			line-height 46px