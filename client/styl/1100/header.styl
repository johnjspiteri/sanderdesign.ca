.header--container
	height 42px
	padding 0
	margin 0 0 24px 0
	background $white
	border-bottom $white-border

.header
	width 960px
	height 42px
	margin 0 auto

	&__brand
		width 380px
		padding 0
		margin 0
		height 40px
		background none
		border-bottom none

	&__logo
		width 380px
		margin 0

	&__outline
		width 20px
		height 20px
		margin 10px 16px 0 20px

	&__white
		width 8px
		height 8px
		margin 6px 0 0 6px

	&__name
		width 324px

		h1
			width 138px
			margin 13px 0 0 0
			font-size 15px
			line-height 15px

		h2
			width 180px
			margin 13px 0 0 0
			font-size 15px
			line-height 15px

	nav
		border-right $white-border
		padding 0
		margin 0

	&__tile
		height 42px
		padding 0 30px
		margin 0
		border none
		border-left $white-border

		h2
			font-size 14px
			line-height 43px

	&__tile.active
		height 43px
		background $background
		border-bottom none