.header--container
	height 44px
	padding 0
	margin 0 0 22px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 440px
		padding 0
		margin 0
		background none
		border-bottom none

	&__logo
		width 440px
		margin 0 0 0 0

	&__outline
		width 24px
		height 24px
		margin 9px 22px 0 0

	&__white
		width 8px
		height 8px
		margin 8px 0 0 8px

	&__name
		width 394px

		h1
			font-weight 500
			width 156px
			margin 15px 0 0 0
			font-size 17px
			line-height 17px

		p
			width 230px
			margin 15px 0 0 0
			font-weight 400
			font-size 17px
			line-height 17px

	nav
		border-right $dotted

	&__tile
		height 44px
		padding 0 22px
		margin 0
		border none
		border-left $dotted
		background $tile

		h2
			font-size 16px
			line-height 48px