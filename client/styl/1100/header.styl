.header--container
	height 48px
	padding 0
	margin 0 0 22px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto
	height 48px

	&__brand
		width 460px
		padding 0
		margin 0
		height 48px
		background none
		border-bottom none

	&__logo
		width 460px
		margin 0 0 0 0

	&__outline
		width 26px
		height 26px
		margin 12px 22px 0 0

	&__white
		width 8px
		height 8px
		margin 9px 0 0 9px

	&__name
		width 394px

		h1
			width 156px
			margin 19px 0 0 0
			font-size 17px
			line-height 17px

		h2
			width 230px
			margin 19px 0 0 0
			font-size 17px
			line-height 17px

	nav
		border-right $dotted
		padding 0
		margin 0

	&__tile
		height 48px
		padding 0 22px
		margin 0
		border none
		border-left $dotted
		background $tile

		h2
			font-size 15px
			line-height 57px

	&__tile.active
		height 49px
		background $background