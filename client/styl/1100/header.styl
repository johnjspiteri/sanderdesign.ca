.header--container
	height 48px
	padding 0
	margin 0 0 22px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 460px
		padding 0
		margin 0
		background none
		border-bottom none

	&__logo
		width 460px
		margin 0 0 0 0

	&__outline
		width 26px
		height 26px
		margin 10px 22px 0 0

	&__white
		width 8px
		height 8px
		margin 9px 0 0 9px

	&__name
		width 404px

		h1
			width 168px
			margin 14px 0 0 0
			font-size 19px
			line-height 19px

		p
			width 230px
			margin 15px 0 0 0
			font-weight 400
			font-size 21px
			line-height 21px

	nav
		border-right $dotted

	&__tile
		height 48px
		padding 0 22px
		border none
		border-left $dotted
		// border-bottom $white-border

		h2
			font-size 16px
			line-height 50px