.header--container
	height 68px
	padding 0
	margin 0 0 22px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 360px
		padding 0
		margin 0
		background none
		border-bottom none

	&__logo
		width 360px
		margin 0 0 0 40px

	&__outline
		width 26px
		height 26px
		margin 8px 20px 0 0

	&__white
		width 8px
		height 8px
		margin 9px 0 0 9px

	&__name
		width 274px

		h1
			margin 12px 0 5px 0
			font-size 19px
			line-height 19px

		p
			font-weight 400
			font-size 20px
			line-height 20px

	nav
		border-right $dotted

	&__tile
		height 44px
		padding 0 24px
		border none
		border-left $dotted
		border-bottom $white-border

		h2
			font-size 16px
			line-height 50px