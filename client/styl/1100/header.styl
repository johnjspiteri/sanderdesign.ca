.header--container
	height 70px
	padding 0
	margin 0 0 22px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 360px
		padding 0
		margin 0
		background none
		border-bottom none

	&__logo
		width 360px
		margin 0 0 0 40px

	&__outline
		width 30px
		height 30px
		margin 7px 24px 0 0

	&__white
		width 10px
		height 10px
		margin 10px 0 0 10px

	&__name
		width 274px

		h1
			margin 11px 0 5px 0
			font-size 22px
			line-height 22px

		p
			font-weight 400
			font-size 22px
			line-height 22px

	nav
		float right
		padding 0
		margin 0
		border-right $dotted

	&__tile
		height 46px
		padding 0 24px
		border none
		border-left $dotted
		border-bottom $white-border

		h2
			font-size 17px
			line-height 53px