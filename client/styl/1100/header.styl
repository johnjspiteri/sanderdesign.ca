.header--container
	height 40px
	padding 0
	margin 0 0 24px 0
	background $white
	border-bottom $white-border

.header
	width 1000px
	height 40px
	margin 0 auto

	&__brand
		width 420px
		padding 0
		margin 0
		height 40px
		background none
		border-bottom none

	&__logo
		width 420px
		margin 0

	&__outline
		width 22px
		height 22px
		margin 8px 18px 0 0

	&__white
		width 8px
		height 8px
		margin 7px 0 0 7px

	&__name
		width 374px

		h1
			width 142px
			margin 12px 0 0 0
			font-size 15px
			line-height 15px

		h2
			width 200px
			margin 12px 0 0 0
			font-size 15px
			line-height 15px

	nav
		border-right $dotted
		padding 0
		margin 0

	&__tile
		height 40px
		padding 0 28px
		margin 0
		border none
		border-left $dotted

		h2
			font-size 15px
			line-height 42px

	&__tile.active
		height 41px
		background $background
		border-bottom none