.search--holder
	float left
	width 100%
	height 49px
	margin 12px 0 0 0

.search
	width 365px
	height 49px
	margin 0 0 0 40px
	border-left $dotted

	&__option
		width 181px
		margin 0

		select
			width 181px
			height 48px
			font-size 21px
			line-height 21px

		.select-mask
			width 180px
			height 47px

			p
				font-size 21px
				line-height 49px

			.caret
				margin 22px 0 0 10px
				border-top 6px solid #777
				border-right 6px solid transparent
				border-left 6px solid transparent