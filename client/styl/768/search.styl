.search
	width 698px
	padding 20px 0 12px 30px
	margin 0 0 18px 20px

	p
		margin 0 0 15px 0
		font-size 21px
		line-height 21px

	&__option
		width 159px
		margin 0 10px 14px 0

		select
			width 159px
			height 56px
			font-size 22px
			line-height 22px

		.select-mask
			width 157px
			height 56px
			margin 32px 0 0 0

			h4
				font-size 22px
				line-height 54px

	&__input
		display block
		float left
		width 241px
		padding 0
		margin 0 10px 0 0

		input
			float left
			width 239px
			height 52px
			padding 0
			margin 0
			font-weight 400
			font-size 20px
			line-height 20px
			color $black
			background $white
			border $white-border
			border-radius 4px
			outline none
			text-align center
			cursor pointer
			-webkit-appearance none
			vertical-align middle
			-moz-appearance none
			appearance none

		input::-webkit-input-placeholder
		input:-moz-placeholder
		input::-moz-placeholder
		input:-ms-input-placeholder
			line-height normal

	&__reset
		width 48px
		height 51px
		padding 0
		margin 32px 0 0 0

		.fa-times
			font-size 21px
			line-height 53px