.header--container
	padding 0 0 16px 0
	margin 0 0 24px 0

.header
	margin 0 auto

	&__brand
		width 250px
		padding 0
		margin 0 0 0 30px

	&__logo
		width 250px

	&__outline
		width 30px
		height 30px
		margin 18px 22px 0 0

	&__white
		width 12px
		height 12px
		margin 9px 0 0 9px

	&__name
		width 194px

		h1
			margin 15px 0 9px 0
			font-size 22px
			line-height 22px

		h2
			font-size 18px
			line-height 18px

	&__mobile
		display: none

	nav
		display block
		float left
		width 488px
		padding 0
		margin 0
		border none

	&__tile
		float right
		height 20px
		padding 20px 20px 10px 20px
		margin 0
		background $accent
		border-left $dotted
		border-bottom $dotted

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 18px
			line-height 18px
			color $black
			border none
			text-align center

	&__tile.active,
	&__tile:hover
		background $white