.header--container
	padding 0
	margin 0 0 24px 0
	background none
	border none

.header
	margin 0 auto

	&__brand
		width 100%
		padding 0
		margin 0
		border-bottom $white-border

	&__logo
		width 700px
		margin 0 0 0 40px

	&__outline
		width 24px
		height 24px
		margin 20px 22px 18px 0

	&__white
		width 8px
		height 8px
		margin 8px 0 0 8px

	&__name
		width 630px

		h1
			width 186px
			margin 22px 0 0 0
			font-size 20px
			line-height 20px

		h2
			width 320px
			margin 23px 0 0 0
			font-size 19px
			line-height 19px

	&__mobile
		display none

	nav
		display block
		float left
		padding 0
		margin 0
		border none

	&__tile
		float left
		height 56px
		padding 0 34px
		margin 0
		background $green-light
		border none
		border-right $white-border
		border-bottom $white-border
		border-radius none
		cursor pointer

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 19px
			line-height 57px
			color $paragraph
			border none
			text-align center
			text-shadow $shadow

	&__tile.active
		background $background
		border-bottom none

		h2
			color $paragraph

	&__tile.end.active
		background $background
		border-bottom none
		border-right none

		h2
			color $paragraph
