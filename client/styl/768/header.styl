.header--container
	padding 0
	margin 0 0 28px 0
	background none
	border none

.header
	margin 0 auto

	&__brand
		width 768px
		padding 0
		margin 0
		border-bottom $white-border

	&__logo
		width 700px
		margin 0 0 0 40px

	&__outline
		width 28px
		height 28px
		margin 18px 24px 14px 0

	&__white
		width 10px
		height 10px
		margin 9px 0 0 9px

	&__name
		width 630px

		h1
			width 202px
			margin 23px 0 0 0
			font-size 21px
			line-height 21px

		h2
			width 320px
			margin 23px 0 0 0
			font-size 21px
			line-height 21px

	&__mobile
		display none

	nav
		display block
		float left
		padding 0
		margin 0
		border none

	&__tile
		float left
		height 54px
		padding 0 30px
		margin 0
		background $green-light
		border none
		border-right $dotted
		border-bottom $dotted
		border-radius none
		cursor pointer

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 21px
			line-height 62px
			color $paragraph
			border none
			text-align center
			text-shadow $shadow

	&__tile.active
		background $background
		border-bottom none

		h2
			color $black
