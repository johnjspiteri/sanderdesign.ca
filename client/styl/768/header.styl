.header--container
	padding 0 0 0 0
	margin 0 0 28px 0
	background none
	border none

.header
	margin 0 auto

	&__brand
		width 768px
		padding 0
		margin 0
		border-bottom $white-border

	&__logo
		width 700px
		margin 0 0 0 40px

	&__outline
		width 28px
		height 28px
		margin 16px 24px 16px 0

	&__white
		width 10px
		height 10px
		margin 9px 0 0 9px

	&__name
		width 600px

		h1
			width 202px
			margin 18px 0 0 0
			font-size 24px
			line-height 24px

		p
			width 320px
			margin 17px 0 0 0
			font-size 26px
			line-height 26px

	&__mobile
		display none

	nav
		display block
		float left
		padding 0
		margin 0
		border none

	&__tile
		float left
		height 50px
		padding 0 28px
		margin 0
		background $tile
		border none
		border-right $dotted
		border-bottom $white-border

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-weight 500
			font-size 20px
			line-height 55px
			color $black
			border none
			text-align center

	&__tile.active,
	&__tile:hover
		background $accent