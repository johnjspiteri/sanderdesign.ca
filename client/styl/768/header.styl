.header--container
	padding 0
	margin 0 0 28px 0
	background none
	border none

.header
	margin 0 auto

	&__brand
		width 768px
		padding 0
		margin 0
		border-bottom $white-border

	&__logo
		width 700px
		margin 0 0 0 40px

	&__outline
		width 26px
		height 26px
		margin 17px 24px 14px 0

	&__white
		width 10px
		height 10px
		margin 8px 0 0 8px

	&__name
		width 630px

		h1
			width 184px
			margin 22px 0 0 0
			font-size 19px
			line-height 19px

		h2
			width 320px
			margin 22px 0 0 0
			font-size 19px
			line-height 19px

	&__mobile
		display none

	nav
		display block
		float left
		padding 0
		margin 0
		border none

	&__tile
		float left
		height 54px
		padding 0 34px
		margin 0
		background $green-light
		border none
		border-right $dotted
		border-bottom $dotted
		border-radius none
		cursor pointer

		h2
			float left
			width 100%
			padding 0
			margin 0
			font-weight 400
			font-size 19px
			line-height 57px
			color $paragraph
			border none
			text-align center
			text-shadow $shadow

	&__tile.active
		background $background
		border-bottom none

		h2
			color $black

	&__tile.end.active
		background $background
		border-right none
		border-bottom none

		h2
			color $black
