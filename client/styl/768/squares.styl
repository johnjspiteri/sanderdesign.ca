.square
	width: 313px
	padding: 32px 30px 34px 40px

	h1
		width 640px
		font-size 27px
		line-height: 38px
		margin: 12px 0 18px 0

	h3
		font-size 22px
		line-height 22px
		padding 0 0 10px 0
		margin 0 0 14px 0

	h6
		width 510px
		margin: 4px 120px 24px 30px
		font-size 20px
		line-height: 30px

	p
		width 280px
		font-size: 18px
		line-height: 31px
		margin 0

	p.full
		width 660px
		margin 0 0 18px 0

	p.large
		display block
		width 660px
		margin 0 0 18px 0

	img
		width: 200px
		height: 238px
		margin: 0 30px 34px 0

	#map
		width: 688px
		height: 280px
		margin: 20px 0 20px 0
		border $border

	.profile
		display block
		float left
		width 170px
		height 209px
		margin 0 30px 0 0
		background #fff url(../img/profile/1.jpg) no-repeat;
		border $border

.square.line
	border-right 1px dotted #ccc

.square.end
	border-bottom none