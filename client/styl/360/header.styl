.header--container
	padding 0 0 12px 0
	margin 0 0 18px 0

.header
	margin 0 auto

	&__logo
		width 300px

	&__outline
		width 28px
		height 28px
		margin 16px 22px 0 0

	&__white
		width 10px
		height 10px
		margin 9px 0 0 9px

	&__name
		width 248px

		h1
			margin 20px 0 12px 0
			font-size 22px
			line-height 22px

		h2
			width 100%
			margin 0 0 20px 0
			font-size 21px
			line-height 21px

	&__mobile
		margin 0 4px 0 0

		h3
		.fa-paper-plane
			height 31px
			padding 0 14px 0 14px
			margin 0 10px 0 0
			font-size 18px
			line-height 30px

		.fa-paper-plane
			font-weight normal
			font-size: 16px
			line-height: 33px