.header--container
	height 84px
	padding 0
	margin 0 0 28px 0
	background $white
	border-bottom $white-border

.header
	width 1024px
	margin 0 auto

	&__brand
		width 380px
		padding 0
		margin 0
		border-bottom none

	&__logo
		width 380px
		margin 0

	&__outline
		width 26px
		height 26px
		margin 13px 22px 0 30px

	&__white
		width 10px
		height 10px
		margin 8px 0 0 8px

	&__name
		float left
		width 294px

		h1
			width 260px
			margin 17px 0 10px 0
			font-size 20px
			line-height 20px

		h2
			width 260px
			margin 0
			font-size 20px
			line-height 20px

	nav
		float right

	&__tile
		height 54px
		padding 0 30px
		margin 0
		border none
		border-left $dotted
		border-bottom $dotted

		h2
			font-size 19px
			line-height 58px

	&__tile.active
		background $background
		border-bottom $dotted