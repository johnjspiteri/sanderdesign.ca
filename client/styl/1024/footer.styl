.footer
	height 332px
	padding 0

	&__holder
		width 924px

		h1
			width 280px
			margin 34px 0 16px 0
			font-size 20px
			line-height 20px

		p
			margin 0 0 16px 0
			font-size 20px
			line-height 20px

		a
			padding 0 0 2px 0
			margin 0 0 10px 0
			font-size 17px
			line-height 34px

	&__company
		width 260px
		padding 0 60px 0 0

	&__about
		float left
		width 330px
		padding 0 20px 0 0
		margin 0

	&__cv
		width 300px
		padding 0 0 34px 0
		margin 0

		p
			width 300px
			margin 0
			font-size 17px
			line-height 34px

	&__social
		width 240px
		margin 0

		.fa-facebook
		.fa-linkedin
		.fa-houzz
			width 60px
			height 54px
			margin 0 16px 0 0
			font-size 37px
			line-height 57px

		.fa-facebook
			font-size 35px
			line-height 58px

	&__map
		display: block
		float left
		width 250px
		height 300px
		padding 0
		margin 32px 0 0 0
		background: $white
		border $border
		border-bottom none
		border-radius: 4px 4px 0 0