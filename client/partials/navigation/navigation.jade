md-sidenav(md-component-id="navigation", class="md-sidenav md-closed", esc-key='close();')
	.navigation
		.navigation__tile(data-ng-click="close();")
			.fa.fa-long-arrow-left

		.navigation__tile(ui-sref="app.index", data-ng-click="close();", data-ng-class="{active: $state.includes('app.index')}")
			h4 HOME
		.navigation__tile(ui-sref="app.list", data-ng-click="close();", data-ng-class="{active: $state.includes('app.list') || $state.includes('app.view')}")
			h4 PROJECTS
		.navigation__tile(ui-sref="app.services", data-ng-click="close();", data-ng-class="{active: $state.includes('app.services')}")
			h4 SERVICES
		.navigation__tile(ui-sref="app.media", data-ng-click="close();", data-ng-class="{active: $state.includes('app.media')}")
			h4 MEDIA
		.navigation__tile(ui-sref="app.contact", data-ng-click="close();", data-ng-class="{active: $state.includes('app.contact')}")
			h4 CONTACT