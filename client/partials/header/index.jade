header
	.header--container
		.header
			.header__brand
				.header__logo
					.header__outline(ui-sref='app.index')
						.header__white
					.header__name
						h1(ui-sref='app.index') SANDER DESIGN
						h2 Landscape Architecture
					.header__mobile
						.fa.fa-bars(data-ng-click='open();')

			nav
				.header__tile(ui-sref="app.index", data-ng-class="{'active': $state.includes('app.index')}")
					h2 Home
				.header__tile(ui-sref="app.list", data-ng-class="{'active': $state.includes('app.list') || $state.includes('app.view')}")
					h2 Projects
				.header__tile(ui-sref="app.services", data-ng-class="{'active': $state.includes('app.services')}")
					h2 Services
				.header__tile(ui-sref="app.media", data-ng-class="{'active': $state.includes('app.media')}")
					h2 Media
				.header__tile.end(ui-sref="app.contact", data-ng-class="{'active': $state.includes('app.contact')}")
					h2 Contact