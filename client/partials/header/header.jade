header
	.header--container
		.header
			.header__brand
				.header__logo
					.header__outline
						.header__white
					.header__name
						h1(ui-sref='app.index') SANDER DESIGN
						h2 Landscape Architecture
					.header__mobile(data-ng-click='open();')
						.fa.fa-bars
			nav
				.header__tile(ui-sref="app.about", data-ng-class="{'active': $state.includes('app.about')}")
					h2 ABOUT
				.header__tile(ui-sref="app.media", data-ng-class="{'active': $state.includes('app.media')}")
					h2 MEDIA
				.header__tile(ui-sref="app.services", data-ng-class="{'active': $state.includes('app.services')}")
					h2 SERVICES
				.header__tile(ui-sref="app.projects.list", data-ng-class="{'active': $state.includes('app.projects.list')}")
					h2 PROJECTS